<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2.60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="@dimen/_240sdp"
        android:id="@+id/cvProduct1"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="13.00dp"
        android:elevation="0dp"
        app:cardPreventCornerOverlap="false"

        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="13.00dp"
            android:orientation="vertical">

            <com.denzcoskun.imageslider.ImageSlider
                android:layout_width="wrap_content"
                android:layout_height="156dp"
                app:iss_auto_cycle="false"
                android:id="@+id/ivImageSlider1"
                android:background="#DDDDDD"
                app:iss_text_align="CENTER"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tvProductTitle1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:background="#DDDDDD"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="19.50sp"/>

            <TextView
                android:id="@+id/tvProductQuantity1"
                android:layout_marginTop="5dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="#DDDDDD"
                android:textColor="#6F6F6F"
                android:textSize="15.60dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvProductPrice1"
                        android:layout_width="50dp"
                        android:background="#DDDDDD"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:textSize="15.60dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tvAdd1"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="#DDDDDD"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:padding="5.20dp"
                        android:gravity="center"
                        android:textColor="@color/blue"
                        android:textSize="14.30sp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="@dimen/_240sdp"
            android:id="@+id/cvProduct2"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="13.00dp"
            android:elevation="0dp"
            app:cardPreventCornerOverlap="false"

            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13.00dp"
                android:orientation="vertical">

                <com.denzcoskun.imageslider.ImageSlider
                    android:layout_width="wrap_content"
                    android:layout_height="156dp"
                    app:iss_auto_cycle="false"
                    android:id="@+id/ivImageSlider2"
                    android:background="#DDDDDD"
                    app:iss_text_align="CENTER"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/tvProductTitle2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:background="#DDDDDD"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:textSize="19.50sp"/>

                <TextView
                    android:id="@+id/tvProductQuantity2"
                    android:layout_marginTop="5dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="#DDDDDD"
                    android:textColor="#6F6F6F"
                    android:textSize="15.60dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvProductPrice2"
                            android:layout_width="50dp"
                            android:background="#DDDDDD"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:textSize="15.60dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/tvAdd2"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:background="#DDDDDD"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:padding="5.20dp"
                            android:gravity="center"
                            android:textColor="@color/blue"
                            android:textSize="14.30sp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
