<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFEB3B"
    tools:context=".auth.SplashFragment">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tvAtoZ"
                android:layout_width="wrap_content"
                android:layout_height="91.00dp"
                android:text="AtoZ"
                android:textColor="#000000"
                android:textSize="@dimen/_40ssp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvStore"
                android:layout_width="wrap_content"
                android:layout_height="91.00dp"
                android:text=" Store"
                android:textColor="#4CAF50"
                android:textSize="@dimen/_40ssp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="India's Biggest Online General Store"
            android:textSize="@dimen/_15ssp"
            android:textColor="#000000"/>
        <View
            android:layout_width="334.00dp"
            android:layout_height="2.6dp"
            android:layout_weight="3"
            android:background="#4CAF50"
            android:layout_marginTop="18.00dp"/>
        <ImageView
            android:id="@+id/ivSplash"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/store"
            android:layout_marginTop="26.00dp"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>